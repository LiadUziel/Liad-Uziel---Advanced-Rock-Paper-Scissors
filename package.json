{
  "name": "tests",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "main": "dist/src/index.js",
  "scripts": {
    "buildGame": "tsc",
	"lint": "eslint --ignore-path .gitignore . --ext .ts,.tsx,jsx,.js --fix",
    "runGame": "yarn buildGame && node dist/src/index.js",

